{
    "app:org.civicrm.cron": {
        "title": "Cron",
        "desc": "Cron periodically executes the CiviCRM job scheduler to ensure that background tasks execute.",
        "appId": "app:org.civicrm.cron",
        "appCert": "*PLACEHOLDER*",
        "appUrl": "http:\/\/cxnapp.l\/cxn\/register",
        "perm": {
            "desc": "The cron service needs permission to:<ul><li>Execute cron jobs</li><li>Inspect cron logs</li><li>Inspect basic system info, such as default language and current CiviCRM version</li></ul>The cron service does not have access to contacts' personal information.",
            "api": [
                {
                    "version": 3,
                    "entity": "Job",
                    "actions": "*",
                    "required": {},
                    "fields": "*"
                },
                {
                    "version": 3,
                    "entity": "JobLog",
                    "actions": "get",
                    "required": {},
                    "fields": "*"
                },
                {
                    "version": 3,
                    "entity": "Setting",
                    "actions": ["get"],
                    "required": {},
                    "fields": ["defaultContactCountry","lcMessages","userFrameworkBaseURL","userFrameworkResourceURL"]
                },
                {
                    "version": 3,
                    "entity": "System",
                    "actions": ["get"],
                    "required": {},
                    "fields": "*"
                }
            ],
            "grant": "*"
        }
    }
}